<div id="timeline-control">
	<ul>
		<% if @recent_speeches.previous_page.nil? %>
		<li class="previous-off">&laquo; Previous</li>
		<% else %>
		<li class="previous">
			<%= link_to("&laquo; Previous", :controller => "text2speeches", :action => "timeline", :page => @recent_speeches.previous_page)%>
		</li>
		<% end %>


		<% if @recent_speeches.next_page.nil? %>
		<li class="previous-off">Next &raquo;</li>
		<% else %>
		<li class="previous">
			<%= link_to("Next &raquo;", :controller => "text2speeches", :action => "timeline", :page => @recent_speeches.next_page)%>
		</li>
		<% end %>
	</ul>
</div>